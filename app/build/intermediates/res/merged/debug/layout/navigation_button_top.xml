<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_centerHorizontal="true"
    android:layout_alignParentTop="true">

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnNavTop"
        android:clickable="true"
        android:src="@drawable/ic_navigation_black_24dp"
        android:rotation="0"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblNavTop"
        style="@style/navButtonLabelTheme"
        android:layout_marginTop="@dimen/navigation_label_vertical"
        android:layout_gravity="center_horizontal"/>

</LinearLayout><!-- From: file:/home/hikk/AndroidStudioProjects/UMNTour/app/src/main/res/layout/navigation_button_top.xml -->