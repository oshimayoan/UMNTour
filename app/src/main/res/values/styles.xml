<resources>

    <!-- Base application theme. -->
    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@drawable/background_loading</item>
    </style>
    
    <!--Menu button theme-->
    <style name="MenuButtonTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#7bbb</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:gravity">center</item>
    </style>

    <!--Splash screen / Launcher screen theme-->
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar.FullScreen">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <!--Navigation button label theme-->
    <style name="navButtonLabelTheme">
        <item name="android:background">#8333</item>
        <item name="android:padding">4dp</item>
        <item name="android:textColor">#eee</item>
    </style>

</resources>
